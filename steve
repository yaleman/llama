#!/bin/bash

if [ ! -d ".venv" ]; then
    echo "############################################"
    echo "Creating virtualenv and installing packages"
    echo "############################################"
    python -m venv .venv
    # shellcheck disable=SC1091
    source .venv/bin/activate
    pip install -r requirements.txt

fi

# shellcheck disable=SC1091
source .venv/bin/activate

torchrun --nproc_per_node 1 llama_steve/llama_steve